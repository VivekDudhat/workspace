<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_hotel_booking_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="booking">
                <div class="page">
                    <div style="text-align: center;">
                        <h2>Hotel Booking Report</h2>
                    </div>

                    <h3>Customer Details</h3>
                    <table class="table">
                        <tr>
                            <td><strong>Name:</strong> <t t-esc="booking.customer_name"/></td>
                            <td><strong>Contact:</strong> <t t-esc="booking.contact"/></td>
                        </tr>
                        <tr>
                            <td><strong>Email:</strong> <t t-esc="booking.email_id"/></td>
                            <td><strong>Check-In:</strong> <t t-esc="booking.check_in"/></td>
                        </tr>
                        <tr>
                            <td><strong>Check-Out:</strong> <t t-esc="booking.check_out"/></td>
                            <td><strong>Room Type:</strong> <t t-esc="booking.room_id.rooms_ids.room_type"/></td>
                        </tr>
                    </table>

                    <h3>Room Booking Details</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Room</th>
                                <th>Room Price</th>
                                <th>Total Nights</th>
                                <th>Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc="booking.room_id.rooms_ids.room_type"/></td>
                                <td><t t-esc="booking.room_price"/></td>
                                <td><t t-esc="(booking.check_out - booking.check_in).days"/></td>
                                <td><t t-esc="booking.total_price"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <h3>Amenities Booked</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Amenity</th>
                                <th>Charge</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="booking.amenity_id" t-as="amenity">
                                <tr>
                                    <td><t t-esc="amenity.amenity"/></td>
                                    <td><t t-esc="amenity.charge"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <h3>Rental Vehicle</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Vehicle</th>
                                <th>Charge</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc="booking.vehicle_id.vehicle_type"/></td>
                                <td><t t-esc="booking.vechicle_charge"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <h3>Room Cleaning Service</h3>
                    <t t-if="booking.state == 'checked_out'">
                        <p>The room was cleaned before checkout.</p>
                    </t>
                    <t t-else="">
                        <p>Room cleaning is scheduled at checkout.</p>
                    </t>

                    <h3>Total Amount</h3>
                    <table class="table">
                        <tr>
                            <td><strong>Room Total:</strong></td>
                            <td><t t-esc="booking.total_price"/></td>
                        </tr>
                        <tr>
                            <td><strong>Amenities Total:</strong></td>
                            <td><t t-esc="booking.total_charge"/></td>
                        </tr>
                        <tr>
                            <td><strong>Vehicle Total:</strong></td>
                            <td><t t-esc="booking.vechicle_charge"/></td>
                        </tr>
                        <tr>
                            <td><strong>Final Amount:</strong></td>
                            <td><t t-esc="booking.total_price + booking.total_charge + booking.vechicle_charge"/></td>
                        </tr>
                    </table>

                    <p style="text-align: center; margin-top: 30px;">Thank you for choosing our hotel!</p>
                </div>
            </t>
        </t>
    </template>
</odoo>
